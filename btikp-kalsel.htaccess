# Enable rewrite engine
RewriteEngine On
RewriteBase /btikp-kalsel/

# Redirect to public folder for frontend
RewriteCond %{REQUEST_URI} !^/btikp-kalsel/admin/
RewriteCond %{REQUEST_URI} !^/btikp-kalsel/public/
RewriteCond %{REQUEST_URI} !^/btikp-kalsel/uploads/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]

# Disable directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8
